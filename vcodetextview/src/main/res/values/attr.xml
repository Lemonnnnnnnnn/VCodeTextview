<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VCodeTextView">
        <!-- 验证码长度 -->
        <attr name="vCodeDataLength" format="integer" />
        <!-- 验证码字体大小 -->
        <attr name="vCodeTextSize" format="dimension" />
        <!-- 验证码字体颜色 -->
        <attr name="android:textColor"/>
        <!-- 验证码框的宽度 -->
        <attr name="vCodeWidth" format="dimension" />
        <!-- 验证码框的高度 -->
        <attr name="vCodeHeight" format="dimension" />
        <!-- 验证码框间距 -->
        <attr name="vCodeMargin" format="dimension" />
        <!-- 验证码默认背景 -->
        <attr name="vCodeBackgroundNormal" format="reference|color" />
        <!-- 验证码焦点背景 -->
        <attr name="vCodeBackgroundFocus" format="reference|color" />
        <!-- 字体加粗 -->
        <attr name="vCodeTextBold" format="boolean"/>
    </declare-styleable>

</resources>